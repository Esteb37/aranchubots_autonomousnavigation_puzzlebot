<launch>

  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">

    <rosparam file="$(find aranchubots_autonomousnavigation_puzzlebot)/params/costmap_common_params_2d.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find aranchubots_autonomousnavigation_puzzlebot)/params/costmap_common_params_2d.yaml" command="load" ns="local_costmap" />

    <rosparam file="$(find aranchubots_autonomousnavigation_puzzlebot)/params/map_nav_params/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find aranchubots_autonomousnavigation_puzzlebot)/params/map_nav_params/global_costmap_params.yaml" command="load" />

    <rosparam file="$(find aranchubots_autonomousnavigation_puzzlebot)/params/planner_params/local_planner_params.yaml" command="load" />
    <rosparam file="$(find aranchubots_autonomousnavigation_puzzlebot)/params/planner_params/global_planner_params.yaml" command="load" />
    <rosparam file="$(find aranchubots_autonomousnavigation_puzzlebot)/params/move_base_params.yaml" command="load" />

    <!-- Navfn is the mostly used global planner -->
    <param name="base_global_planner" type="string" value="navfn/NavfnROS" /> <!-- *** consider changing to Global Planner to implement A* -->
    <!-- base_local_planner/TrajectoryPlannerROS is used for non holonomic robots (differential)
    which is our case with the jackal robot.
    dwa_local_planner/DWAPlannerROS is used for holonomic robots so it won't work for jackal robot -->
    <!--<param name="base_local_planner" type="string" value="dwa_local_planner/DWAPlannerROS"/>-->
    <param name="base_local_planner" type="string" value="base_local_planner/TrajectoryPlannerROS"/>

  </node>

</launch>